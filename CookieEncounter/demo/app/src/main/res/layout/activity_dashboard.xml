<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView

            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/menu1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/foodList"
            android:layout_marginTop="15dp"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@drawable/back_btn_2"
            android:layout_marginLeft="270dp"
            android:text="Menu" />

    </LinearLayout>


    <com.denzcoskun.imageslider.ImageSlider
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:auto_cycle="true"
        app:corner_radius="20"
        app:period="1000"
        app:delay="0"
        android:layout_margin="20dp"
        android:id="@+id/slider"/>





    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="190dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/scroll1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="  Fudge cake                             1300tk"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/donuts"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="  Donut                           300tk"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pas"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="  Dessert                           400tk"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/chicken_images" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="  Chicken Fry                             325tk"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal" />


            </LinearLayout>





        </LinearLayout>

    </HorizontalScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNav"
        android:paddingBottom="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="3dp"
        android:background="#8e6995"
        app:menu="@menu/bottom_navigation"
        />




</LinearLayout>
